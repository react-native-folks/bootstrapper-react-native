{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["index.d.ts", "src/**/*"],
  "exclude": [".history", "node_modules", "**/node_modules/*"]
}
